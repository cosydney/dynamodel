<p id="notice"><%= notice %></p>

<h1>Listing Mannequins -> index</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <!-- passing it current user and getting name from it -->
      <h3>Welcome! <strong><%= current_user.mannequin.first_name %></strong></h3>
    </tr>
  </thead>

  <tbody>
    <p>Total: <%= @mannequins.count %></p>
    <% @mannequins.each do |m| %>
    <!-- link_to not working properly -->
      <p>Mannequin: <%= link_to  "#{m.first_name}", mannequin_path(m) %> <%= m.last_name%> </p>
      <p>Description: <%= m.description %></p>
    <% end %>

  </tbody>
</table>

