<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Edit your profile</h1>
      <%= simple_form_for(@client) do |f| %>
        <%= f.error_notification %>
       <!--  <%= f.object.errors.full_messages %> -->

       <!-- change the placeholder to get the company name  -->
        <p>
          <%= f.input :company_name, placeholder: "name"%>
        </p>

        <!-- change the placeholder to get the website -->
        <p>
        <%= f.input :website, placeholder: "your company website"%>
        </p>

        <%= f.button :submit, "Edit",  class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
