<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Edit your profile</h1>
      <%= simple_form_for(@client) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :company_name %>
          <%= f.input :website %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Save" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
